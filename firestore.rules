// firestore.rules (completo, con permisos para admins y guard)
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /chatMessages/{docId} {
      allow read: if true; // Todos pueden leer mensajes
      allow create: if request.auth != null; // Solo logueados pueden crear
      // --- AÑADIDO: Permitir borrar solo a admins ---
      allow delete: if request.auth != null && (
                      request.auth.token.admin == true ||
                      exists(/databases/$(database)/documents/admins/$(request.auth.uid))
                    );
      // --- FIN AÑADIDO ---
      allow update: if false; // No se pueden editar mensajes
    }

    match /ranking/{uid} {
      allow read: if true;
      allow create, update: if request.auth != null
                              && request.auth.uid == uid
                              && request.resource.data.uid == uid;
      allow delete: if request.auth != null && (
                      request.auth.token.admin == true ||
                      exists(/databases/$(database)/documents/admins/$(request.auth.uid))
                    );
    }

    match /resultados/{docId} {
      allow read: if true;
      allow create: if request.auth != null
                      && request.resource.data.uid == request.auth.uid;
      allow delete: if request.auth != null && (
                      request.auth.token.admin == true ||
                      exists(/databases/$(database)/documents/admins/$(request.auth.uid))
                    );
       allow update: if false;
    }

    // Encuestas: create para usuarios, read/delete para admin
    match /encuestas/{docId} {
      allow create: if request.auth != null
                      && request.resource.data.uid == request.auth.uid;
      allow read, delete: if request.auth != null && (
                      request.auth.token.admin == true ||
                      exists(/databases/$(database)/documents/admins/$(request.auth.uid))
                    );
      allow update: if false;
    }

    // Colección de admins (para el guard)
    match /admins/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow create, update, delete: if false;
    }

    match /loginLogs/{docId} {
      allow create: if request.auth != null
                      && request.resource.data.uid == request.auth.uid;
      allow read, update, delete: if false;
    }
  }
}
